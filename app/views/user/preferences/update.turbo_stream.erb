    <%= turbo_stream.update dom_id(current_user, :accounts), partial: 'accounts/grid', locals: { accounts: current_user.accounts } %>
  <% else %>
    <%= turbo_stream.update dom_id(current_user, :accounts), partial: 'accounts/list', locals: { accounts: current_user.accounts } %>
